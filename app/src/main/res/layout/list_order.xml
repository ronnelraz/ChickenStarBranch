<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="3dp"
    app:cardElevation="8dp">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clickToClose="true"
        app:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:id="@+id/cancelitem"
        android:tag="Bottom3"
        android:background="#ff5534"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <ImageView android:id="@+id/trash"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:src="@drawable/icons8_trash"
            android:layout_weight="1"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="105dp">

            <ProgressBar android:id="@+id/loading"
                android:progressBackgroundTint="@color/purple_700"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>



            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:src="@drawable/bg"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:riv_corner_radius="5dp"/>

<!--            <View-->
<!--                android:layout_width="110dp"-->
<!--                android:background="@drawable/left"-->
<!--                android:layout_height="130dp"-->
<!--                android:layout_alignParentLeft="true"-->
<!--                android:layout_alignParentTop="true"-->
<!--                />-->

            <TextView
                tools:text="100%\noff"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                android:id="@+id/discount"
                android:background="@drawable/ribbon_mark"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="-8dp"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:backgroundTint="#e55039"/>

            <LinearLayout
                android:gravity="center|top"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="110dp"
                android:layout_alignParentLeft="true">

                <TextView
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/productname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="ProductName"
                    android:textAllCaps="true"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textColor="#95a5a6"
                    android:id="@+id/origprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price" android:textAllCaps="true"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#3d8c40"
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textAllCaps="true"/>




            </LinearLayout>


            <ezy.ui.view.NumberStepper
                android:padding="5dp"
                android:layout_height="40sp"
                android:id="@+id/qty"
                android:background="#FFFFFF"
                android:layout_width="120dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                app:nsButtonSize="27dp"
                app:nsMaxValue="13"
                app:nsMinValue="1"
                app:nsStep="0"
                app:nsValue="0"
                style="@style/NumberStepper"/>

            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#3d8c40"
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-3dp"
                android:text="Total"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    </com.daimajia.swipe.SwipeLayout>
</androidx.cardview.widget.CardView>
